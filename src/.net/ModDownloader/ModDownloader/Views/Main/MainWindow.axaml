<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:ModDownloader.Views.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ModDownloader.Views.Main.MainWindow"
        x:DataType="main:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ModDownloader">
    <Design.DataContext>
        <main:MainWindowViewModel/>
    </Design.DataContext>
    
    <StackPanel>
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox AcceptsReturn="True"
                 Text="{Binding Description}"
                 Watermark="Enter a description"/>
        <TextBlock Margin="0 5" >User Name</TextBlock>
        <TextBox Text="{Binding UserName}"/>
        <Button Margin="0 20" Command="{Binding SubmitCommand}">Submit</Button>
    </StackPanel>
</Window>
